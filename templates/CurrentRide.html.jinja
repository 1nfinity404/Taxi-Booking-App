{% extends "partials/NavbarLayout.jinja" %}
{% block title %}Current Ride Page{% endblock %}

{% block content %}

    <!-- Jumbotron header -->
    <div class="jumbotron text-center bg-white py-3">
        <div class="container">
            <h1 class=" fw-semibold display-4">Current Ride</h1>
        </div>
    </div>
    <a href="ViewMap.html" class="text-decoration-none">View on Map</a>
    <table class="table fw-semibold my-3">
        <tbody>
        <tr>
            <td class="text-primary">Distance Left</td>
            <td>Distance</td>
        </tr>
