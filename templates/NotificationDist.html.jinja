{% extends "partials/NavbarLayout.jinja" %}
{% block title %}Notifications: Distance Page{% endblock %}

{% block content %}

    <!-- Jumbotron header -->
    <div class="jumbotron text-center bg-white py-3">
        <div class="container">
            <h1 class=" fw-semibold display-4">Notifications: Distance</h1>
        </div>
    </div>
    <div class="container fw-semibold">
        <p class="text-primary">Every:</p>
        <div class="form-check form-check-reverse text-primary">
            <input class="form-check-input" type="checkbox" value="" id="1Mile">
            <label class="form-check-label" for="1Mile">1 Mile</label>
        </div>
        <hr>
        <div class="form-check form-check-reverse text-primary">
            <input class="form-check-input" type="checkbox" value="" id="2Mile">
            <label class="form-check-label" for="2Mile">2 Miles</label>
        </div>
        <hr>
        <div class="form-check form-check-reverse text-primary">
            <input class="form-check-input" type="checkbox" value="" id="3Mile">
            <label class="form-check-label" for="3Mile">3 Miles</label>
        </div>
        <hr>
    </div>
{% endblock %}