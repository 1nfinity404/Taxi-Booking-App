{% extends "partials/NavbarLayout.jinja" %}
{% block title %}Notification Page{% endblock %}

{% block content %}

    <!-- Jumbotron header -->
    <div class="jumbotron text-center bg-white py-3">
        <div class="container">
            <h1 class=" fw-semibold display-4">Notifications</h1>
        </div>
    </div>
    <div class="fw-semibold py-4">
        <div class="form-check form-switch form-check-reverse">
            <input class="form-check-input" type="checkbox" id="PushNotification">
            <label class="form-check-label text-primary" for="PushNotification">Push Notifications</label>
        </div>
        <hr>
        <div class="form-check form-switch form-check-reverse">
            <input class="form-check-input" type="checkbox" id="DriverUpdate">
            <label class="form-check-label text-primary" for="DriverUpdate">En-route Driver Update</label>
        </div>
        <hr>
        <table class="table">
            <tbody>
            <tr>
                <td><a href="NotificationDist.html" class="text-decoration-none">Distance</a></td>
                <td>Choice</td>
            </tr>
            <tr>
                <td><a href="NotificationTime.html" class="text-decoration-none">Time</a></td>
                <td>Choice</td>
            </tr>
            </tbody>
        </table>
        <div class="container my-5">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="SpecOffers">
                <label class="form-check-label text-primary" for="SpecOffers">Special Offers</label>
            </div>
            <hr>
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="BookReceipts">
                <label class="form-check-label text-primary" for="BookReceipts">Booking Receipts</label>
            </div>
        </div>
    </div>
{% endblock %}